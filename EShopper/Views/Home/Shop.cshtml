        function GetProductList(sortby, gender, product, startprice, endprice, color,size) {
            debugger;
            var pageno = 1;
            var paging = 0;
            $.ajax({
                url: '/Home/GetProductsWithFilter',
                type: "GET",
                data: { "sortby": sortby, "gender": gender, "product": product, "startprice": startprice, "endprice": endprice, "color": color, "size":size,"pageNo": pageno, "paging": paging },
                // data: { pageNo: pageno, paging: paging},
                success: function (result) {
                    //debugger;
                    if (result) {
                        debugger;
                        GetProductData(result, 1, 0);
                    }
                },
                error: function (xhr, status) {
                    //debugger;
                    alert(status);
                }
            });
        }
        function GetProductData(data, pageNo, paging) {
            debugger;

            $('#productList').empty();
            $('#productList').append('');
            if (data != '' || data != 0) {
                var count = 0;
                $.each(data, function (k, item) {
                    if (count == 0 && paging < 1) {
                        debugger;
                        Bind_productitem_Paging(data.length, data[k].currentPage);
                    }
                    count += 1;
                });
            }
            else {
                $("#productList").append('<div class="job-ad-item"><div class="item-info">No product found.</div></div>');
            }
        }
        function Bind_productitem_Paging(totalCount, startPage) {
            //debugger;
            var pageSize = 10;
            //if (totalCount > pageSize) {
            var pageMod = totalCount % pageSize;
            //}
            //else
            //{
            //var pageMod = pageSize % totalCount;
            //}
            var pageNo;
            if (pageMod > 0) {
                pageNo = parseInt(totalCount / pageSize) + 1;
            }
            else {
                pageNo = parseInt(totalCount / pageSize);
            }
            paginationstock.twbsPagination('destroy');
            paginationstock.twbsPagination({
                totalPages: pageNo,
                startPage: startPage,
                visiblePages: 10,
                onPageClick: function (event, page) {
                    //debugger;
                    if (firstload == false) {
                        SearchproductList(page, 1)
                    }
                    else {
                        firstload = false;
                        SearchproductList(page, 1)
                    }
                }
            });
        }
        var paginationstock = $('#productLists > #page-selection>div>div').twbsPagination({
